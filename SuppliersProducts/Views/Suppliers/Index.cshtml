@model IEnumerable<SuppliersProducts.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="form-actions no-color">
    <form asp-action="Index" method="get">
        <p>
            Full Name: <input type="text" name="SearchStringFullName" value="@ViewData["CurrentNameFilter"]" /><br /><br />
            Nationality: <input type="text" name="SearchStringNationality" value="@ViewData["CurrentNationalityFilter"]" /><br /><br />
            Supply Date: <input type="date" name="SearchStringSupplyDate" value="@ViewData["CurrentSupplyDateFilter"]" />
        </p>
        <p>
            <br />
            <input type="submit" value="Search" class="btn btn-dark" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FullNameSortParm"]">@Html.DisplayNameFor(model => model.FullName)</a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NationalitySortParm"]">@Html.DisplayNameFor(model => model.Nationality)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SupplyDateSortParm"]">@Html.DisplayNameFor(model => model.SupplyDate)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplyDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
