@model SuppliersProducts.ViewModel.FileView

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>File</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="custom-file"></div>
            <div class="form-group">
                <input asp-for="file" class="form-control custom-file-input">
                <label asp-for="file" class="custom-file-label">Choose File...</label>

            </div>
            <div class="form-group">
                <input type="submit" name="btn_create"value="Create" class="btn btn-primary" />
                <button name="compare" asp-action="Compare">Compare</button>
            </div>

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });

                </script>

            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>